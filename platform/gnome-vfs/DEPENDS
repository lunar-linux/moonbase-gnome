depends  gamin
depends  GConf
depends  gnome-mime-data
depends  gnutls
depends  neon
depends  dbus-glib

optional_depends  "avahi"            \
                  "--enable-avahi"   \
                  "--disable-avahi"  \
                  "for zeroconf network support"

optional_depends  "samba"  \
                  "--enable-samba --with-samba-includes=/usr/include/samba-4.0"  \
                  "--disable-samba"  \
                  "for samba support"
